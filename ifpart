EMPTY =
VAR = $(EMPTY)

# if expands the variable, so it knows its empty doing else

$(if $(VAR), $(info do-if), $(info do-else))

HAS_A_VALUE = I'm not empty
$(if $(HAS_A_VALUE), $(info if-is-do-this),$(info else-do-this))

#ifdef does not expand the variable it simply check if it has been defined

ifdef EMPTY
    $(info VAR is defined)
else
    $(info VAR is undefined)
endif

ifdef VAR
    $(info VAR is defined)
else
    $(info VAR is not defined)
endif

all: ; @echo
